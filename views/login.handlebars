<div class="col-sm-6 col-sm-offset-3">

    <h1 align="center"><span class="fa fa-sign-in"></span> Login</h1>
    <!-- LOGIN FORM -->
    <form action="/login" method="POST">
        <div class="form-group">
        	<label>UserName</label>
            <input  type="text" name="username" value="{{user.username}}">
        </div>
        <div class="form-group">
        	<label>Password</label>
            <input type="password"  name="password" value="{{user.password}}">
            {{#if message}}
                <p>{{message}}</p>
            {{/if}}
        </div><br>
        <button type="submit" class="btn btn-warning btn-lg col-sm-4 col-sm-offset-3">Login</button><br><br>

    </form>
    
    <hr>
    <p>Need an account?<button onclick="location.href='/signup'" class="btn btn-warning btn-lg">Signup</button></p>
